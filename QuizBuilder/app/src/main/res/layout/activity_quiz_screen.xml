<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2D2D"
    tools:context=".QuizScreen">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_quit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:backgroundTint="#4D4D4D"
                android:text="@string/btn_quit"
                android:textColor="#FFFFFF"
                app:strokeColor="#000000"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/txt_termNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_restart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:backgroundTint="#4D4D4D"
                android:text="@string/btn_restart"
                android:textColor="#FFFFFF"
                app:strokeColor="#000000"
                app:strokeWidth="1dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <TextView
                android:id="@+id/txt_definition"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_margin="25dp"
                android:layout_weight="100"
                android:background="@drawable/rounded_corners"
                android:focusable="false"
                android:gravity="center"
                android:text="definition"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn_term1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/rounded_corners"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_term2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/rounded_corners"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn_term3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/rounded_corners"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_term4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/rounded_corners"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="100"
                android:backgroundTint="#4D4D4D"
                android:text="@string/btn_submit"
                android:textColor="#FFFFFF"
                app:strokeColor="#000000"
                app:strokeWidth="1dp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>